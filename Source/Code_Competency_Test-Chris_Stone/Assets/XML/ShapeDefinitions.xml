<?xml version="1.0"?>
<!DOCTYPE prototypes
[
	<!ELEMENT prototypes (square, triangle, circle, hexagon)>

	<!ELEMENT square  (sideLength, colour, spawnPoint, animation)>
	<!ELEMENT triangle (width, height, colour, spawnPoint, animation)>
	<!ELEMENT circle (radius, colour, spawnPoint, animation)>
	<!ELEMENT hexagon (width, height, colour, spawnPoint, animation)>

	<!ELEMENT colour(r, g, b, a)>
	<!ELEMENT spawnPoint(x, y)>
	<!ELEMENT animation(ID, speed)>

	<!--	
		For animation ID:
		Left To Right 	= 0
		Up And Down		= 1
		Circular		= 2
		Box				= 3
	 -->
]>

